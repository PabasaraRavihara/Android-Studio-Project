<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F7FA">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="#8B5CF6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“‹ View Attendance"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select date and subject to view records"
            android:textSize="14sp"
            android:textColor="#DDD6FE"
            android:layout_marginTop="4dp"/>

    </LinearLayout>

    <!-- Filter Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="2dp">

        <!-- Date Picker -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2023-10-27"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1E293B"/>

            <Button
                android:id="@+id/btnPickDateView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick Date"
                android:backgroundTint="#8B5CF6"/>

        </LinearLayout>

        <!-- Subject Filter -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subject"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#475569"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/subjectSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background"
            android:layout_marginBottom="16dp"/>

        <!-- Load Button -->
        <Button
            android:id="@+id/btnLoadAttendance"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Load Attendance Records"
            android:textSize="16sp"
            android:backgroundTint="#10B981"/>

    </LinearLayout>

    <!-- Records List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/attendanceRecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp"
        android:clipToPadding="false"
        android:scrollbars="vertical"/>

    <!-- Empty View -->
    <TextView
        android:id="@+id/emptyView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="No records found"
        android:textSize="16sp"
        android:textColor="#94A3B8"
        android:gravity="center"
        android:visibility="gone"/>

</LinearLayout>